<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Book" table = "book">
      
      <meta attribute = "class-description">
         This class contains the book detail. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
    
      <property name = "id" column = "_id" type = "org.bson.types.ObjectId"/>
      <property name = "isbn" column = "isbn" type = "string"/>
      <property name = "title" column = "title" type = "string"/>
      <property name = "rating" column = "rating" type = "string"/>
      <property name = "author" column = "author" type = "string"/>
      <property name = "language" column = "language" type = "string"/>
      <property name = "smImage" column = "smImage" type = "string"/>
      <property name = "lgImage" column = "lgImage" type = "string"/>
      <property name = "year" column = "year" type = "string"/>
      
   </class>
   
</hibernate-mapping>